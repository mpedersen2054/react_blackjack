navbarGrey = #F8F8F8

h1
  color red

.profile-img
  max-height 100%

.navbar-inverse
  padding 0 15px

.lg-mini-title
  font-size 18px

.wrapper
  position relative
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  height auto
  // overflow auto

.table-container
  position relative
  width 100%
  height 100%
  padding 80px 0 0


.interface
  min-height 640px
  overflow hidden

  @media (max-width: 992px)
    position relative
    top auto
    right auto
    border-left none
    padding-left 0
    margin-top 40px

  .interface-meta
    position relative
    overflow scroll
    img
      height 50px

  .player-meta
    position relative

.bottom-interface
  position fixed
  bottom 0
  left 0
  right 0
  background-color orange
  .thicker
    height 60px



.hands


.hand
  margin-bottom 20px
  h4
    margin-top 0


.cards
  display inline-block

.card
  width 140px
  padding 2px
  background-color #000
  border-radius 10px
  height auto
  float left
  margin 0 5px 10px
  @media(max-width: 992px)
    width 102px
  @media(max-width: 620px)
    width 75px
  @media(max-width: 485px)
    width 58px
  img
    width 100%
    height auto